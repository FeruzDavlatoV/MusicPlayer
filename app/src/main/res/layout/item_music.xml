<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_music"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/tv_title_music"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_music"
        app:layout_constraintTop_toTopOf="@id/img_music"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_album_music"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:text="@string/app_name"
        app:layout_constraintStart_toStartOf="@id/tv_title_music"
        app:layout_constraintTop_toBottomOf="@id/tv_title_music"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/img_music"
        android:gravity="center_vertical"
        android:textSize="20sp" />



</androidx.constraintlayout.widget.ConstraintLayout>